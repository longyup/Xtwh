<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:id="@+id/motify_tv_nick_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="昵称："/>

            <EditText
                android:id="@+id/motify_et_nick_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:id="@+id/motify_tv_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="姓名："/>

            <EditText
                android:id="@+id/motify_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:id="@+id/motify_tv_pwd"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="密码："/>

            <EditText
                android:id="@+id/motify_et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:id="@+id/motify_tv_sex"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="性别："/>

            <EditText
                android:id="@+id/motify_et_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:id="@+id/motify_tv_phone"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="联系方式："/>

            <EditText
                android:id="@+id/motify_et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:id="@+id/motify_tv_mail"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="电子邮件："/>

            <EditText
                android:id="@+id/motify_et_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:id="@+id/motify_tv_birthday"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="生日："/>

            <EditText
                android:id="@+id/motify_et_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:id="@+id/motify_tv_signature"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="个性签名："/>

            <EditText
                android:id="@+id/motify_et_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:id="@+id/motify_tv_place"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="常住地："/>

            <EditText
                android:id="@+id/motify_et_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp">
            <TextView
                android:id="@+id/motify_tv_id_card"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="生日："/>

            <EditText
                android:id="@+id/motify_et_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/motify_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="确认修改"/>

</LinearLayout>
